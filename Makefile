		ft_toupper.c\
		ft_strsub.c

OBJ = ${SRC:.c=.o}

all: $(NAME)

%.o: %.c
	@printf "\rgcc -c -Wall -Wextra -Werror -o $@ $^                    "
	@gcc -c -Wall -Wextra -Werror -o $@ $^

$(NAME): $(OBJ)
	@echo ""
	ar rc $(NAME) $(OBJ)

